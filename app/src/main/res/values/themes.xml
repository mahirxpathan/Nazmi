<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with poetic elegance -->
    <style name="Base.Theme.Nazmi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/Nazmi.FadeWindowAnimation</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/nazmi_text_light</item>
        <item name="android:colorBackground">@color/nazmi_bg_light</item>
        <item name="android:buttonStyle">@style/Nazmi.ButtonStyle</item>
        <item name="materialButtonStyle">@style/Nazmi.M3ButtonStyle</item>
    </style>

    <style name="Theme.Nazmi" parent="Base.Theme.Nazmi" />

    <style name="Nazmi.FadeWindowAnimation">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Nazmi.ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/nazmi_text_light</item>
        <item name="android:background">@color/nazmi_button_light</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Nazmi.M3ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>