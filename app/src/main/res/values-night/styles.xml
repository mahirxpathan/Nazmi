<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Nazmi.ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">serif</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="backgroundTint">@color/nazmi_button_dark</item>
        <item name="android:textColor">@color/nazmi_text_dark</item>
    </style>

    <!-- Toolbar title style with poetic serif font -->
    <style name="Nazmi.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Bottom Navigation View Style -->
    <style name="Nazmi.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">4dp</item>
    </style>
</resources>